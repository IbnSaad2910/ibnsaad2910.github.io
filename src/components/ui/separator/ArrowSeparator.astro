---
interface Props {
  size?: number | string;
  class?: string;
}

const { size = 28, class: className } = Astro.props as Props;
const dimension = typeof size === 'number' ? `${size}` : String(size);
---

<div class={['sw-separator-arrow', className].filter(Boolean).join(' ')}>
  <svg
    class="sw-chevron"
    width={dimension}
    height={dimension}
    viewBox="0 0 24 24"
    fill="none"
    xmlns="http://www.w3.org/2000/svg"
  >
    <path d="M6 9l6 6 6-6" stroke="currentColor" stroke-width="2.5" stroke-linecap="round" stroke-linejoin="round" />
  </svg>
  <span class="sr-only">Scroll down</span>
  
</div>


